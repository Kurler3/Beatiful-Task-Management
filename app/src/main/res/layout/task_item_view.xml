<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="37dp">

    <RelativeLayout
        android:layout_width="289dp"
        android:layout_height="104dp"
        android:background="@drawable/task_list_item">

        <TextView
            android:id="@+id/task_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task_Title"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:textSize="21sp"
            android:fontFamily="@font/lobster"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/task_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:00 AM - 9:00 AM"
            android:layout_below="@id/task_item_title"
            android:textSize="11sp"
            android:textColor="#0D0D0D"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dots"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>